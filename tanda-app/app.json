{
  "expo": {
    "name": "Tanda Digital",
    "slug": "tanda-app",
    "version": "2.0.0",
    "scheme": "tandadigital",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3b82f6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tanda.digital"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3b82f6"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.tanda.digital"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single",
      "name": "Tanda Digital",
      "shortName": "Tanda",
      "description": "Ahorro colaborativo con euros digitales",
      "backgroundColor": "#ffffff",
      "themeColor": "#3b82f6"
    }
  }
}
